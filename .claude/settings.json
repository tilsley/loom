{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/guard-generated-files.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/go/guard-go-mod.sh",
            "description": "Block direct edits to go.mod / go.sum"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/go/guard-arch.sh",
            "description": "Enforce server architecture import boundaries (service/execution/handler layers)"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/remind-generate.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/console/quality-check.sh",
            "description": "Console quality check (oxlint + biome format + eslint --fix) — apps/console/src/**/*.{ts,tsx}"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/go/quality-check.sh",
            "description": "Go quality check (gofmt + go vet) — apps/server, apps/migrators, pkg"
          }
        ]
      }
    ]
  }
}
